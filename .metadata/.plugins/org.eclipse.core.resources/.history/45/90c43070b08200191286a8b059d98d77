		/*
		 * Students s1 = new Students(1,"Sajal Gupta",22); Students s2 = new
		 * Students(2,"Shivank Gupta",19); Students s3 = new Students(3,"Prajjwal",21);
		 * //Students s4 = new Students(4,"xyz",52); Points p1 = new Points(1,95);
		 * Points p2 = new Points(4,92); Points p3 = new Points(3,90);
		 * p1.setStudent(s1); p2.setStudent(s2); p3.setStudent(s3);
